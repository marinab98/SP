#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#define MAX_NAME (256)
#define NO (-1)
struct _student;

typedef struct _student *Position;
typedef struct _student {
    char firstName[MAX_NAME];
    char lastName[MAX_NAME];
    int birthYear;
    Position next;

}Student;


Position createStudent(char *, char *, int );
